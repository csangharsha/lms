<div class="w-full">
    <% @course.lessons.order(:position).each do |lesson| %>
        <% if lesson.paid %>
            <div class="border p-6 hover:bg-grey-200">
                <div>
                    <%= icon('fa-solid', 'lock', class: "mr-2 text-grey-600") %> <span class="font-light"><%= lesson.title %>
                </div>
            </div>
        <% else %>
            <%= link_to course_lesson_path(@course, lesson) do %>
                <div class="border p-6 hover:bg-grey-600 <%= @lesson.id==lesson.id ? 'bg-amaranth-100' : ''%>">
                    <span class="font-light"><%=lesson.title%></div>
                </div>
            <% end %>
        <% end %>
    <% end %>
</div>
